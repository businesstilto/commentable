{
    "name": "businesstilto/commentable",
    "description": "A lightweight and easy to use package that adds commenting in Filament v4.5 and newer.",
    "keywords": [
        "businesstilto",
        "laravel",
        "commentable"
    ],
    "homepage": "https://github.com/businesstilto/commentable",
    "support": {
        "issues": "https://github.com/businesstilto/commentable/issues",
        "source": "https://github.com/businesstilto/commentable"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Matilda Smets",
            "email": "info@tilto.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.5",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.12",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Tilto\\Commentable\\": "src/",
            "Tilto\\Commentable\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tilto\\Commentable\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tilto\\Commentable\\CommentableServiceProvider"
            ],
            "aliases": {
                "Commentable": "Tilto\\Commentable\\Facades\\Commentable"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
